{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "data": {
    "name": "heat_sources_absolut_chart"
  },
  "params": [
    {
      "name": "period",
      "value": "2030_medium",
      "bind": {
        "input": "select",
        "options": [
          "current",
          "2030_low",
          "2030_medium",
          "2030_high",
          "2040_low",
          "2040_medium",
          "2040_high",
          "technical_potential"
        ],
        "labels": [
          "Current",
          "2030 - Low Climate Change",
          "2030 - Medium Climate Change",
          "2030 - High Climate Change",
          "2040 - Low Climate Change",
          "2040 - Medium Climate Change",
          "2040 - High Climate Change",
          "Technical Potential"
        ],
        "name": "Scenario:"
      }
    },
    { "name": "grid", "select": "interval", "bind": "scales" }
  ],
  "title": "Heat Sources Energy Comparison [GWh] Absolut",
  "transform": [
    { "calculate": "datum.name", "as": "feature_name" },
    {
      "fold": [
        "e_current_air",
        "e_2030_low_wocc_air",
        "e_2030_medium_wocc_air",
        "e_2030_high_wocc_air",
        "e_2040_low_wocc_air",
        "e_2040_medium_wocc_air",
        "e_2040_high_wocc_air",
        "e_technical_potential_air",
        "e_current_aquifer",
        "e_2030_low_wocc_aquifer",
        "e_2030_medium_wocc_aquifer",
        "e_2030_high_wocc_aquifer",
        "e_2040_low_wocc_aquifer",
        "e_2040_medium_wocc_aquifer",
        "e_2040_high_wocc_aquifer",
        "e_technical_potential_aquifer",
        "e_current_closed_systems",
        "e_2030_low_wocc_closed_systems",
        "e_2030_medium_wocc_closed_systems",
        "e_2030_high_wocc_closed_systems",
        "e_2040_low_wocc_closed_systems",
        "e_2040_medium_wocc_closed_systems",
        "e_2040_high_wocc_closed_systems",
        "e_technical_potential_closed_systems",
        "e_current_solarthermal_building",
        "e_2030_low_wocc_solarthermal_building",
        "e_2030_medium_wocc_solarthermal_building",
        "e_2030_high_wocc_solarthermal_building",
        "e_2040_low_wocc_solarthermal_building",
        "e_2040_medium_wocc_solarthermal_building",
        "e_2040_high_wocc_solarthermal_building",
        "e_technical_potential_solarthermal_building",
        "e_current_solarthermal_ground_mounted",
        "e_2030_low_wocc_solarthermal_ground_mounted",
        "e_2030_medium_wocc_solarthermal_ground_mounted",
        "e_2030_high_wocc_solarthermal_ground_mounted",
        "e_2040_low_wocc_solarthermal_ground_mounted",
        "e_2040_medium_wocc_solarthermal_ground_mounted",
        "e_2040_high_wocc_solarthermal_ground_mounted",
        "e_technical_potential_solarthermal_ground_mounted",
        "e_current_aquathermal",
        "e_2030_low_wocc_aquathermal",
        "e_2030_medium_wocc_aquathermal",
        "e_2030_high_wocc_aquathermal",
        "e_2040_low_wocc_aquathermal",
        "e_2040_medium_wocc_aquathermal",
        "e_2040_high_wocc_aquathermal",
        "e_technical_potential_aquathermal",
        "e_current_excess_heat_hp",
        "e_2030_low_wocc_excess_heat_hp",
        "e_2030_medium_wocc_excess_heat_hp",
        "e_2030_high_wocc_excess_heat_hp",
        "e_2040_low_wocc_excess_heat_hp",
        "e_2040_medium_wocc_excess_heat_hp",
        "e_2040_high_wocc_excess_heat_hp",
        "e_technical_potential_excess_heat_hp",
        "e_current_excess_heat_dir",
        "e_2030_low_wocc_excess_heat_dir",
        "e_2030_medium_wocc_excess_heat_dir",
        "e_2030_high_wocc_excess_heat_dir",
        "e_2040_low_wocc_excess_heat_dir",
        "e_2040_medium_wocc_excess_heat_dir",
        "e_2040_high_wocc_excess_heat_dir",
        "e_technical_potential_excess_heat_dir"
      ],
      "as": ["metric", "value"]
    },
    {
      "calculate": "replace(datum.metric, /^E_/, '')",
      "as": "metric_tail"
    },
    {
      "filter": "period == 'current' ? indexof(datum.metric, 'e_current_') == 0 : period == 'technical_potential' ? indexof(datum.metric, 'e_technical_potential_') == 0 : indexof(datum.metric, 'e_' + period) == 0"
    },
    {
      "calculate": "replace(datum.metric, /^E_/, '')",
      "as": "metric_no_e"
    },
    {
      "calculate": "join(slice(split(datum.metric_no_e, '_'), indexof(split(datum.metric_no_e, '_'), 'air') >= 0 ? indexof(split(datum.metric, '_'), 'air') : indexof(split(datum.metric, '_'), 'aquifer') >= 0 ? indexof(split(datum.metric, '_'), 'aquifer') : indexof(split(datum.metric, '_'), 'closed') >= 0 ? indexof(split(datum.metric, '_'), 'closed') : indexof(split(datum.metric, '_'), 'solarthermal') >= 0 ? indexof(split(datum.metric, '_'), 'solarthermal') : indexof(split(datum.metric, '_'), 'aquathermal') >= 0 ? indexof(split(datum.metric, '_'), 'aquathermal') : indexof(split(datum.metric, '_'), 'excess') >= 0 ? indexof(split(datum.metric, '_'), 'excess') : 0), '_')",
      "as": "metric_source_raw"
    },
    {
      "calculate": "replace(datum.metric_source_raw, /_/g, ' ')",
      "as": "heat_source_label"
    },
    {
      "calculate": "upper(substring(datum.heat_source_label,0,1)) + substring(datum.heat_source_label,1)",
      "as": "heat_source_label_upper"
    }
  ],
  "mark": { "type": "bar" },
  "encoding": {
    "x": {
      "field": "heat_source_label_upper",
      "type": "nominal",
      "axis": { "labelAngle": -45, "title": "" }
    },
    "xOffset": { "field": "feature_name", "type": "nominal" },
    "y": {
      "field": "value",
      "type": "quantitative",
      "axis": { "title": "Energy [GWh]" }
    },
    "color": {
      "field": "feature_name",
      "type": "nominal",
      "title": "Municipality",
      "scale": {
        "range": [
          "#1f77b4",
          "#ff7f0e",
          "#2ca02c",
          "#d62728",
          "#9467bd",
          "#8c564b",
          "#e377c2",
          "#7f7f7f",
          "#bcbd22",
          "#17becf"
        ]
      }
    },
    "tooltip": [
      { "field": "feature_name", "title": "Municipality" },
      { "field": "heat_source_label_upper", "title": "Heat Source" },
      {
        "field": "value",
        "type": "quantitative",
        "format": ".1f",
        "title": "Energy [GWh]"
      }
    ]
  },
  "background": "transparent"
}
