{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Vertical deflection over time",
  "data": {"name": "timeseries"},
  "transform": [
    {
      "calculate": "year(datum.date)",
      "as": "year"
    }
  ],
  "layer": [
    {
      "mark": {"type": "line", "stroke": "#1f77b4"},
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "axis": {
            "title": "Year",
            "format": "%Y",
            "tickCount": {"interval": "year", "step": 1}
          }
        },
        "y": {
          "title": "Vertical deflection [mm]",
          "field": "vertical deflection in mm",
          "type": "quantitative"
        }
      }
    },
    {
      "mark": {"type": "line", "stroke": "#e74c3c", "strokeDash": [5, 5], "strokeWidth": 2},
      "transform": [
        {
          "regression": "vertical deflection in mm",
          "on": "date",
          "method": "linear"
        }
      ],
      "encoding": {
        "x": {"field": "date", "type": "temporal"},
        "y": {"field": "vertical deflection in mm", "type": "quantitative"}
      }
    },
    {
      "transform": [
        {
          "regression": "vertical deflection in mm",
          "on": "date",
          "method": "linear",
          "params": true
        },
        {"calculate": "'Trend: ' + format(datum.coef[1] * 365.25 * 24 * 60 * 60 * 1000, '.3f') + ' mm/year'", "as": "equation"},
        {"calculate": "'R² = ' + format(datum.rSquared, '.4f')", "as": "r2"}
      ],
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "top",
        "dx": -5,
        "dy": 5,
        "fontSize": 11,
        "fontWeight": "normal"
      },
      "encoding": {
        "x": {"value": "width"},
        "y": {"value": 10},
        "text": {"field": "equation", "type": "nominal"}
      }
    },
    {
      "transform": [
        {
          "regression": "vertical deflection in mm",
          "on": "date",
          "method": "linear",
          "params": true
        },
        {"calculate": "'R² = ' + format(datum.rSquared, '.4f')", "as": "r2"}
      ],
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "top",
        "dx": -5,
        "dy": 20,
        "fontSize": 11,
        "fontWeight": "normal"
      },
      "encoding": {
        "x": {"value": "width"},
        "y": {"value": 10},
        "text": {"field": "r2", "type": "nominal"}
      }
    },
    {
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["date"],
            "nearest": true,
            "on": "mouseover",
            "clear": "mouseout"
          }
        }
      ],
      "transform": [],
      "mark": {
        "type": "rule",
        "color": "grey"
      },
      "encoding": {
        "x": {"field": "date", "type": "temporal"},
        "opacity": {
          "condition": {
            "param": "hover",
            "value": 0.5,
            "empty": false
          },
          "value": 0
        },
        "tooltip": [
          {"field": "date", "type": "temporal", "title": "Date"},
          {"field": "vertical deflection in mm", "type": "quantitative", "title": "Value", "format": ""}
        ]
      }
    },
    {
      "transform": [
        {"filter": {"param": "hover"}}
      ],
      "mark": {
        "type": "point",
        "filled": true,
        "size": 90
      },
      "encoding": {
        "x": {"field": "date", "type": "temporal"},
        "y": {"field": "vertical deflection in mm", "type": "quantitative"},
        "opacity": {
          "condition": {
            "param": "hover",
            "value": 0.5,
            "empty": false
          },
          "value": 0
        }
      }
    }
  ],
  "background": "transparent"
}
